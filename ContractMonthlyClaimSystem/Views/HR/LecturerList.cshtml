@model List<ContractMonthlyClaimSystem.ViewModels.LecturerListViewModel>
@{
    ViewData["Title"] = "Lecturer Management";
}

<h2>Lecturer Management</h2>

<div class="mb-3">
    <a asp-action="CreateLecturer" class="btn btn-success">Create New Lecturer</a>
    <a asp-action="StaffList" class="btn btn-info">Manage Staff</a> <!-- Add this line -->
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-6">Lecturer Management</h1>
                <a href="@Url.Action("CreateLecturer")" class="btn btn-primary">
                    <i class="bi bi-person-plus me-2"></i>Add New Lecturer
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">All Lecturers</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Hourly Rate</th>
                                <th>Status</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lecturer in Model)
                            {
                                <tr>
                                    <td>@lecturer.Name</td>
                                    <td>@lecturer.Email</td>
                                    <td>$@lecturer.HourlyRate.ToString("F2")</td>
                                    <td>
                                        @if (lecturer.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>@lecturer.CreatedDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("EditLecturer", new { id = lecturer.Id })"
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="ToggleLecturerStatus" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@lecturer.Id" />
                                                <button type="submit" class="btn btn-outline-warning toggle-status-btn"
                                                        title="@(lecturer.IsActive ? "Deactivate" : "Activate")"
                                                        data-is-active="@lecturer.IsActive"
                                                        data-lecturer-name="@lecturer.Name">
                                                    @if (lecturer.IsActive)
                                                    {
                                                        <i class="bi bi-person-dash"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-person-check"></i>
                                                    }
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-people fa-3x text-muted mb-3"></i>
                    <h4>No Lecturers Found</h4>
                    <p class="text-muted">Get started by adding your first lecturer.</p>
                    <a href="@Url.Action("CreateLecturer")" class="btn btn-primary">Add First Lecturer</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add confirmation for deactivation/activation
        document.addEventListener('DOMContentLoaded', function() {
            const toggleButtons = document.querySelectorAll('.toggle-status-btn');

            toggleButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    const isActive = this.getAttribute('data-is-active') === 'True';
                    const lecturerName = this.getAttribute('data-lecturer-name');
                    const action = isActive ? 'deactivate' : 'activate';

                    if (!confirm(`Are you sure you want to ${action} lecturer "${lecturerName}"?`)) {
                        e.preventDefault();
                    }
                });
            });

            // Alternative approach if the above doesn't work
            const forms = document.querySelectorAll('form[action*="ToggleLecturerStatus"]');
            forms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    const button = this.querySelector('button[type="submit"]');
                    const isActive = button.getAttribute('data-is-active') === 'True';
                    const lecturerName = button.getAttribute('data-lecturer-name');
                    const action = isActive ? 'deactivate' : 'activate';

                    if (!confirm(`Are you sure you want to ${action} lecturer "${lecturerName}"?`)) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}