}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h2 class="text-center">Access Denied</h2>
            </div>
            <div class="card-body text-center">
                <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                <h4>You don't have permission to access this page.</h4>
                <p class="text-muted">Please contact your administrator if you believe this is an error.</p>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Home</a>
            </div>
        </div>
    </div>
</div>