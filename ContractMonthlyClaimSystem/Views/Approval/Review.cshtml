@model List<ContractMonthlyClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Manager Dashboard - Final Approval";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-6">
                    <i class="bi bi-award me-2"></i>Manager Dashboard
                </h1>
                <span class="badge bg-info fs-6">Ready for Final Approval: @Model.Count</span>
            </div>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="card-title mb-0">
                <i class="bi bi-shield-check me-2"></i>Claims Ready for Final Approval
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Amount</th>
                                <th>Coordinator Approved</th>
                                <th>Documents</th>
                                <th>Final Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>#@claim.Id</strong>
                                    </td>
                                    <td>@claim.LecturerName</td>
                                    <td>@claim.Month.ToString("MMMM yyyy")</td>
                                    <td>@claim.TotalHours.ToString("F2")</td>
                                    <td>$@claim.TotalAmount.ToString("F2")</td>
                                    <td>
                                        @if (claim.ApprovedDate.HasValue)
                                        {
                                            <span class="badge bg-success">@claim.ApprovedDate.Value.ToString("MMM dd")</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @if (claim.Documents?.Any() == true)
                                        {
                                            <span class="badge bg-success">@claim.Documents.Count</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">0</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", "Claim", new { id = claim.Id })"
                                               class="btn btn-outline-primary" title="Review Details">
                                                <i class="bi bi-search"></i>
                                            </a>
                                            <form asp-action="Approve" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@claim.Id" />
                                                <input type="hidden" name="role" value="Manager" />
                                                <button type="submit" class="btn btn-outline-success"
                                                        title="Final Approval"
                                                        onclick="return confirm('Grant final approval for claim #@claim.Id? This will mark it as paid.')">
                                                    <i class="bi bi-check-all"></i>
                                                </button>
                                            </form>
                                            <button type="button" class="btn btn-outline-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#rejectModal@(claim.Id)"
                                                    title="Reject Claim">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </div>

                                        <!-- Reject Modal -->
                                        <div class="modal fade" id="rejectModal@(claim.Id)" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header bg-danger text-white">
                                                        <h5 class="modal-title">Reject Claim #@claim.Id</h5>
                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <form asp-action="Reject" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@claim.Id" />
                                                        <div class="modal-body">
                                                            <div class="alert alert-warning">
                                                                <i class="bi bi-exclamation-triangle me-2"></i>
                                                                This claim has already been approved by Coordinator. Please provide detailed reason for rejection.
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label">Reason for Rejection</label>
                                                                <textarea name="reason" class="form-control" rows="4"
                                                                  placeholder="Please provide a detailed reason for rejecting this approved claim..." required></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="submit" class="btn btn-danger">Reject Claim</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-check-circle display-1 text-muted mb-3"></i>
                    <h4>No Claims Pending Final Approval</h4>
                    <p class="text-muted">All coordinator-approved claims have been processed. Check back later for new submissions.</p>
                </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-shield-lock me-2"></i>Manager Responsibilities
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Final Approval Process:</h6>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-circle text-success me-2"></i>Review coordinator-approved claims</li>
                                <li><i class="bi bi-check-circle text-success me-2"></i>Verify compliance with policies</li>
                                <li><i class="bi bi-check-circle text-success me-2"></i>Grant final approval for payment</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Quality Control:</h6>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-eye text-primary me-2"></i>Ensure documentation completeness</li>
                                <li><i class="bi bi-calculator text-primary me-2"></i>Verify calculation accuracy</li>
                                <li><i class="bi bi-clock-history text-primary me-2"></i>Monitor processing timelines</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-graph-up me-2"></i>Approval Statistics
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <div class="row mb-3">
                            <div class="col-6">
                                <h5 class="text-info">@Model.Count</h5>
                                <small>Pending Final</small>
                            </div>
                            <div class="col-6">
                                <h5 class="text-success">@(ViewBag.ApprovedThisMonth ?? 0)</h5>
                                <small>Approved This Month</small>
                            </div>
                        </div>
                        <div class="progress mb-2" style="height: 8px;">
                            <div class="progress-bar bg-success" style="width: @(ViewBag.ApprovalRate ?? 75)%"></div>
                        </div>
                        <small class="text-muted">Approval Rate: @(ViewBag.ApprovalRate ?? 75)%</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-focus on reject reason textarea when modal opens
            const rejectModals = document.querySelectorAll('[id^="rejectModal"]');
            rejectModals.forEach(modal => {
                modal.addEventListener('shown.bs.modal', function() {
                    const textarea = this.querySelector('textarea');
                    if (textarea) {
                        textarea.focus();
                    }
                });
            });
        });
    </script>
}