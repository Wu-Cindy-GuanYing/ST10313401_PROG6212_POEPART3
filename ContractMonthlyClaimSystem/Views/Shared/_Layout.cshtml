﻿@using ContractMonthlyClaimSystem.Extensions
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ContractMonthlyClaimSystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContractMonthlyClaimSystem.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            @{
                var session = HttpContextAccessor.HttpContext?.Session;
                var isAuthenticated = session?.IsAuthenticated() ?? false;
                var userName = session?.GetUserName() ?? string.Empty;
                var userRole = session?.GetUserRole() ?? string.Empty;
            }

            <div class="navbar-text">
                @if (isAuthenticated)
                {
                    <span class="welcome-text">Welcome, <strong>@userName</strong> <span class="text-muted">(@userRole)</span></span>
                }
            </div>

            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-file-earmark-text me-2"></i>ContractMonthlyClaimSystem
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium nav-link-hover" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium nav-link-hover" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check me-1"></i>Privacy
                            </a>
                        </li>

                        @if (User.IsInRole("HR"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="hrDropdown" role="button" data-bs-toggle="dropdown">
                                    HR Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="HR" asp-action="LecturerList">Lecturers</a></li>
                                    <li><a class="dropdown-item" asp-controller="HR" asp-action="StaffList">Staff</a></li>
                                    <li><a class="dropdown-item" asp-controller="HR" asp-action="GenerateReport">Reports</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Enhanced Login/User Section -->
                    <ul class="navbar-nav">
                        @if (!isAuthenticated)
                        {
                            <li class="nav-item ms-2">
                                <a class="btn btn-primary btn-login px-4 py-2 rounded-3 shadow-sm fw-medium"
                                   asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown ms-2">
                                <a class="nav-link dropdown-toggle user-menu d-flex align-items-center rounded-pill px-3 py-2 shadow-sm"
                                   href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-2"></i>
                                    <span class="fw-medium">@userName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-3">
                                    <li><span class="dropdown-item-text small text-muted">@userRole</span></li>
                                    <li><hr class="dropdown-divider mx-3"></li>
                                    <li>
                                        <a class="dropdown-item dropdown-item-custom" href="#">
                                            <i class="bi bi-person me-2"></i>Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item dropdown-item-custom" href="#">
                                            <i class="bi bi-gear me-2"></i>Settings
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider mx-3"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item dropdown-item-custom text-danger border-0 bg-transparent w-100 text-start">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ContractMonthlyClaimSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>